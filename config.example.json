{
    "processors": [
        {
            "type": "Bytes",
            "topic": "tomates/temperatura",
            "name": "temperatura",
            "uniqueId": "tomTemp",
            "configurations": [
                {
                    "type": "string",
                    "size": "8",
                    "endianness": "bigEndian"
                },
                {
                    "type": "float",
                    "size": "4",
                    "endianness": "bigEndian"
                }
            ]
        }
    ],
    "triggers": [
        {
            "type": "normal",
            "name": "tomato temperature too low",
            "actions": [
                {
                    "type": "MqttAlert",
                    "message": "raise temperature"
                }
            ],
            "conditions": [
                {
                    "type": "condition",
                    "expression": "(tomTemp) < 10" 
                }
            ]

        },
        {
            "type": "normal",
            "name": "tomato temperature too high",
            "actions": [
                {
                    "type": "MqttAlert",
                    "message": "lower temperature"
                }
            ],
            "conditions": [
                {
                    "type": "condition",
                    "expression": "prom(tomTemp)[20] < 10" 
                }
            ]

        },
        {
            "type": "normal",
            "name": "other way",
            "actions": [
                {
                    "type": "MqttAlert",
                    "message": "lower temperature"
                }
            ],
            "conditions": [
                {
                    "type": "AND",
                    "conditions": [
                        {
                            "type": "compare",
                            "operator": ">",
                            "left": "tomTemp",
                            "right": 10
                        },
                        {
                            "type": "compare",
                            "operator": ">",
                            "left": "tomTemp2",
                            "right": 10
                        }
                    ]
                }
            ]

        }
    ]
}